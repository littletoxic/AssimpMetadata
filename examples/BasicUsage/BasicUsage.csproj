  <ItemGroup>
    <PackageReference Include="LittleToxic.AssimpMetadata" Version="6.0.2-beta.4" />
    <PackageReference Include="Microsoft.Windows.CsWin32" Version="0.3.*">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

</Project>
